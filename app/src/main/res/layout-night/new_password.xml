<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical"
	android:layout_width="match_parent"
	android:layout_height="wrap_content">
    <ScrollView 
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/new_passwordTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Configurar una ContraseÃ±a"
                android:layout_gravity="center_horizontal"
                android:textSize="20sp"
                android:layout_margin="10dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:textSize="30sp"
                android:layout_margin="10dp"
                android:id="@+id/newpasswordTV"/>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_marginBottom="20dp">

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1"
                    android:layout_weight="1.0"
                    android:textSize="50sp"
                    android:id="@+id/newpasswordBtn_One"
                    android:onClick="onSet"
                    android:background="@drawable/circle_background"
                    android:padding="20dp"/>

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2"
                    android:layout_weight="1.0"
                    android:background="@drawable/circle_background"
                    android:textSize="50sp"
                    android:id="@+id/newpasswordBtn_two"
                    android:onClick="onSet"
                    android:padding="20dp"/>

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="3"
                    android:layout_weight="1.0"
                    android:background="@drawable/circle_background"
                    android:textSize="50sp"
                    android:id="@+id/newpasswordBtn_three"
                    android:onClick="onSet"
                    android:padding="20dp"/>

            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_marginBottom="20dp">

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="4"
                    android:layout_weight="1.0"
                    android:background="@drawable/circle_background"
                    android:textSize="50sp"
                    android:id="@+id/newpasswordBtn_four"
                    android:onClick="onSet"
                    android:padding="20dp"/>

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="5"
                    android:layout_weight="1.0"
                    android:background="@drawable/circle_background"
                    android:textSize="50sp"
                    android:id="@+id/newpasswordBtn_five"
                    android:onClick="onSet"
                    android:padding="20dp"/>

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="6"
                    android:layout_weight="1.0"
                    android:background="@drawable/circle_background"
                    android:textSize="50sp"
                    android:id="@+id/newpasswordBtn_six"
                    android:onClick="onSet"
                    android:padding="20dp"/>

            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_marginBottom="20dp">

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="7"
                    android:layout_weight="1.0"
                    android:background="@drawable/circle_background"
                    android:textSize="50sp"
                    android:id="@+id/newpasswordBtn_seven"
                    android:onClick="onSet"
                    android:padding="20dp"/>

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="8"
                    android:layout_weight="1.0"
                    android:background="@drawable/circle_background"
                    android:textSize="50sp"
                    android:id="@+id/newpasswordBtn_height"
                    android:onClick="onSet"
                    android:padding="20dp"/>

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="9"
                    android:layout_weight="1.0"
                    android:background="@drawable/circle_background"
                    android:textSize="50sp"
                    android:id="@+id/newpasswordBtn_nine"
                    android:onClick="onSet"
                    android:padding="20dp"/>

            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_marginBottom="20dp">

                <Button
                    android:id="@+id/new_passwordBtn_del"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.0"
                    android:background="@drawable/circle_background"
                    android:textSize="30sp"
                    android:text="DEl"
                    android:onClick="onSet"
                    android:layout_margin="10dp"
                    android:padding="20dp"/>

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:layout_weight="1.0"
                    android:background="@drawable/circle_background"
                    android:textSize="50sp"
                    android:id="@+id/newpasswordBtn_sero"
                    android:onClick="onSet"
                    android:layout_margin="10dp"
                    android:padding="20dp"/>

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="OK"
                    android:layout_weight="1.0"
                    android:background="@drawable/circle_background"
                    android:textSize="30sp"
                    android:id="@+id/newpasswordBtn_ok"
                    android:onClick="onSet"
                    android:layout_margin="10dp"
                    android:padding="20dp"/>

            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>

